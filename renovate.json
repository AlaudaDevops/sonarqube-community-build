{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:dockerfileVersions"
  ],
  "baseBranches": [
    "alauda-2025.1.0"
  ],
  "enabledManagers": ["dockerfile", "regex","maven"],
  "ignorePaths": [
    "**/testdata/**",
    "source/.cirrus/**",
    "testing/**"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "enabled": false,
      "automerge": false
    },
    {
      "matchDatasources": ["maven"],
      "enabled": true
    },
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["maven"],
      "matchUpdateTypes": ["patch"],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources": ["maven"],
      "matchUpdateTypes": ["patch"],
      "enabled": true
    },
    {
      "matchDatasources": ["maven"],
      "matchUpdateTypes": ["minor", "major"],
      "enabled": false
    }
  ]
}