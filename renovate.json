{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:dockerfileVersions"
  ],
  "baseBranches": [
    "alauda-2025.1.0"
  ],
  "enabledManagers": [
    "dockerfile",
    "custom.regex",
    "maven",
    "gradle",
    "gradle-wrapper"
  ],
  "ignorePaths": [
    "**/testdata/**",
    "source/.cirrus/**",
    "testing/**",
    "**/src/test/**"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": true
    },
    {
      "groupName": "all patch dependencies",
      "groupSlug": "patch-upgrades",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ]
}
